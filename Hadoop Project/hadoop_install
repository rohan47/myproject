#!/usr/bin/python
import os,time

def main():
	install_exec()
	
#this function will open the hosts file generated by nmap and start installation on every system one by one
def install_exec():
	tmp=open('hosts.txt','r')
	v=tmp.read()
	x=v.split('\n')
	for line in x:
		os.system('sshpass -p \'redhat\' ssh -o StrictHostKeyChecking=no root@'+line+' installer')
		print line+'done!!'
	tmp.close()
	
main()
